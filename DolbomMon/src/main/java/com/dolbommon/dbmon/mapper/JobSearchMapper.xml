<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dolbommon.dbmon.search.JobSearchDaoImp">

	<select id="selectTMemNo" resultType="com.dolbommon.dbmon.search.MemberVO">
		select no from member
	</select>
	<select id="getTotalRecord" resultType="int">	
		select count(no) from teacher
	</select>
	<update id="hitCount" parameterType="com.dolbommon.dbmon.search.teacherVO" >
		update teacher set hit= hit+1 where userid= #{userid}
	</update>
	
	<select id="jobSearchBoardSelect" parameterType="int" resultType="com.dolbommon.dbmon.search.teacherVO">
		select no, head, subject, content, userid, hit, writedate
		from teacher where no=#{param1}
	</select>
	
	<update id="hitCount" parameterType="int">
		update teacher set hit=hit+1 where no=#{param1}
	</update>
	
	
	
	
</mapper>